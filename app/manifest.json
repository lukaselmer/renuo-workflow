{
  "name": "Renuo Workflow",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Enhances Redmine, Gitlab, etc. and combines them according to the Renuo workflow.",
  "homepage_url": "https://www.renuo.ch",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "others/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "history",
    "notifications",
    "geolocation",
    "https://*/*"
  ],
  "omnibox": {
    "keyword": "r"
  },
  "content_scripts": [
    {
      "matches": [
        "https://redmine.renuo.ch/*",
        "https://git.renuo.ch/*",
        "https://dashboard.renuo.ch/*",
        "https://deploy.renuo.ch/*",
        "https://deploy-develop.renuo.ch/*",
        "https://www.renuo.ch/*",
        "https://ci.renuo.ch/*"
      ],
      "css": [
        "out/styles/inject.css"
      ]
    },
    {
      "matches": [
        "https://redmine.renuo.ch/*",
        "https://git.renuo.ch/*",
        "https://dashboard.renuo.ch/*",
        "https://deploy.renuo.ch/*",
        "https://deploy-develop.renuo.ch/*",
        "https://www.renuo.ch/*",
        "https://ci.renuo.ch/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/mousetrap/mousetrap.min.js",
        "bower_components/sugar/release/sugar.min.js",
        "out/scripts/app.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "out/scripts/app.js",
    "out/scripts/app.js.map",
    "bower_components/*.js",
    "bower_components/*.map"
  ]
}
